ccmd="complete -W 'log logc status deploy enable_mgmt_switch tear-down \
lxc-create install_1 install_2 show-switch --help post-deploy' gen"
eval "$ccmd"
P=`pwd`
P=${P#*"cluster-genesis"}
if [ -z $P ]; then
    if [[ ! $PATH == *"cluster-genesis/scripts:"* ]]; then
        export PATH=`pwd`/scripts:$PATH
    fi
    if [[ ! $PATH == *"cluster-genesis/deployenv/bin:"* ]]; then
        export PATH=`pwd`/deployenv/bin:$PATH
    fi

    inbash=$(grep `pwd`"/scripts:" ~/.bashrc)$(grep 'complete -W "log' ~/.bashrc)
    if [ -z $inbash ]; then
        echo $'\n'"OK for Cluster Genesis to add setup statements to your .bashrc"
        read -p "file (statements can be removed by running tear-down) (y/n) ? " resp
        if [[ $resp == "y" ]]; then
            if [ -z $(grep `pwd`"/scripts:" ~/.bashrc) ]; then
                echo "PATH="`pwd`"/scripts:\$PATH" >> ~/.bashrc
            fi
            if [ -z $(grep 'complete -W "log' ~/.bashrc) ]; then
                echo $ccmd >> ~/.bashrc
            fi
        fi
    fi
    if [ ! -d ~/bin ]; then
        mkdir ~/bin
        export PATH=$PATH:$HOME/bin
    fi
    cp scripts/tear-down ~/bin
    cp scripts/cleanpath ~/bin
else
    echo "Please run setup-env from within the cluster-genesis directory"
fi
